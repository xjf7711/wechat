{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "esModuleInterop": true,
        "noImplicitAny": false,
        "removeComments": false,
        "sourceMap": false,
        "allowSyntheticDefaultImports": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noLib": false,
        "lib": [
            "es2017",
            "esnext.asynciterable"
        ],
        "target": "es6",
        "baseUrl": "./",
        "outDir": "dist"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "test"
    ]
}